pipeline {
    agent any

    stages {
        stage ('Compile Stage') {
            steps {
                withGradle {
                    sh './gradlew clean'
                }
            }
        }

        stage ('Testing Stage') {
            steps {
                withGradle {
                    sh './gradlew build'
                }
            }
        }

        stage ('Run UITest') {
            steps {
                withGradle {
                    sh 'adb devices'
                    sh './gradlew debugExecuteScreenshotTests -Precord -Pandroid.testInstrumentationRunnerArguments.class=com.vnhanh.musicplayer.MainActivityUITest#verify'
                }
            }
        }
    }
}